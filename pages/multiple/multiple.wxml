<!--index.wxml-->
<view class="container">
  <image mode='aspectFit' src="{{shareImage}}" class="share-image"></image>
  <easy-canva painting="{{painting}}" class="canvasdrawer" bind:getImage="eventGetImage"/>

  <button type='primary' bind:tap="eventDraw">再绘制一次</button>

  <button type='warn' bind:tap="eventDrawCry">疯狂绘制模式😂</button>

  <button bind:tap="eventSave">保存到本地</button>
</view>
